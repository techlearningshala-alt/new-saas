{
  "kind": "collectionType",
  "collectionName": "landing_pages",
  "info": {
    "singularName": "landing-page",
    "pluralName": "landing-pages",
    "displayName": "Landing page",
    "description": "Domain + template aware landing page entries"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "domain": {
      "type": "string",
      "required": true
    },
    "path": {
      "type": "string",
      "default": "/",
      "regex": "^\\/.*"
    },
    "gtmContainerId": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "review", "live", "archived"],
      "default": "draft"
    },
    "priority": {
      "type": "integer",
      "default": 100
    },
    "template": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::landing-template.landing-template",
      "inversedBy": "pages"
    },
    "theme": {
      "type": "component",
      "component": "theme.palette"
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.hero",
        "sections.feature-grid",
        "sections.testimonials",
        "sections.cta-banner"
      ],
      "required": true
    },
    "seo": {
      "type": "component",
      "component": "shared.seo"
    }
  }
}
